{
  "name": "@carforyou/pika-plugin-build-components",
  "version": "0.0.0",
  "description": "Generates a node bundle for a separate source file with pika/pack",
  "scripts": {
    "version": "npm run build",
    "build": "pika build",
    "lint": "tslint --project tsconfig.lint.json",
    "format": "tslint --project tsconfig.lint.json --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:debug": "node --inspect-brk --inspect=127.0.0.1:9229 ./node_modules/jest/bin/jest.js --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carforyou/pika-plugin-build-components-pkg.git"
  },
  "author": "CAR FOR YOU",
  "license": "MIT",
  "homepage": "https://github.com/carforyou/pika-plugin-build-components-pkg#readme",
  "dependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-syntax-import-meta": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@pika/plugin-build-node": "^0.9.0",
    "@pika/plugin-build-web": "^0.9.0",
    "@pika/types": "^0.9.0",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "builtin-modules": "^3.1.0",
    "copyfiles": "^2.3.0",
    "postcss": "^7.0.32",
    "rollup": "^1.29.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-postcss": "^3.1.5"
  },
  "devDependencies": {
    "@carforyou/tslint-rules": "^1.1.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-ts-standard-pkg": "^0.9.0",
    "@types/jest": "^24.0.25",
    "jest": "^26.4.2",
    "prettier": "^1.19.1",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.2.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "tsconfig": "tsconfig.pika.json"
        }
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
